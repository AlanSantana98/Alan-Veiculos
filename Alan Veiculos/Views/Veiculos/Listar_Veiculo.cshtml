@model IEnumerable<Alan_Veiculos.Models.VeiculosViewModel>

@{
    ViewData["Title"] = "Listagem de Veículos";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Placa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Ano)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Valor)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ano)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        <a asp-action="Alterar_Veiculo" asp-route-id="@item.Id" class="btn btn-info btn-sm">Editar</a> 
                        <a asp-action="Excluir_Veiculo" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum veículo encontrado.</p>
}
<p>
    <a asp-action="Inserir_Veiculo" class="btn btn-primary">Criar Novo Veículo</a>
</p>
